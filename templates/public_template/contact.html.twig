{% extends 'base.html.twig' %}

{% block title %} Contactez-nous {% endblock%}

{% block body %}
    {% block header %}{% endblock %}
<div class="w-full h-screen absolute flex items-center justify-center p-2" style="background: rgba(0, 0, 0, .5);">
        <div class="w-full max-w-xl px-4 py-12 kw-bg-yellow-trans shadow-xl rounded-xl">
            <h2 class="font-medium text-2xl md:text-4xl text-white text-center pb-6">Nous contacter</h2>

            <div class="p-2 md:flex-1">
                {# pass a string argument to get only the messages of that type #}
                {% for message in app.flashes('success') %}
                    <p class="py-3 text-white text-center text-lg" style="color:red">
                        {{ message }}
                    </p>
                {% endfor %}
                {{ form_start(form ,{ attr :{'class':'flex flex-col space-y-5'}}) }}
                    <div class="flex flex-col space-y-1 text-white">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email,{ 'attr' : { 'class':'px-4 py-2 transition duration-300 border border-gray-300 bg-transparent rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200','row':'5' } }) }}
                    </div>
                    <div class="flex flex-col space-y-1 text-white">

                        {{ form_label(form.sujet) }}
                        {{ form_widget(form.sujet,{ 'attr': {
                            'class':'px-4 py-2 transition duration-300 border border-gray-300 bg-transparent rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200',
                            'row':5
                        } }) }}
                    </div>
                    <div class="flex flex-col space-y-1 text-white">
                        {{ form_label(form.message) }}
                        {{ form_widget(form.message,{ 'attr': {
                            'class':'px-4 py-2 transition duration-300 border border-gray-300 bg-transparent rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200',
                            'row':5
                        } }) }}
                    </div>
                    <div>
                        {{ form_widget(form.ENVOYEZ,{ 'attr': {'class':'w-full px-4 py-2 text-lg font-semibold text-white kw-bg-yellow rounded-md shadow transform hover:scale-105 transition-all duration-500 focus:outline-none'} }) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{%  endblock %}

{%  block footer %}
    {% block javascript %}
    {% block javascripts %}

        <!-- Scripts -->

        <!-- Alpine.js -->
        <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>

        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <!-- Custom script file -->
        <script src="js/main.js"></script>
    {% endblock %}
    {% endblock %}

{% endblock %}